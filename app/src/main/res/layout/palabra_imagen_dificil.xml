<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_amarillo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/background_transparent"
                android:contentDescription="@string/home_btn"
                android:onClick="volverAPantallaPrincipal"
                app:srcCompat="@drawable/home_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nombreDelMiniJuego"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/loren_ipsum"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- row 1 end -->

        <!-- row 2 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/palabraAReconocer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="@string/loren_ipsum"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/palabraButton1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="@string/audio_btn"
                android:src="@drawable/audio_button" />

        </LinearLayout>
        <!-- row 2 end-->

        <!-- row 3 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="4">

            <!-- col 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenInteraccion0"
                    android:layout_width="344dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/minigame_first_image"
                    app:srcCompat="@drawable/defaultfur" />

            </LinearLayout>
            <!-- col 1 end -->

            <!-- col 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenInteraccion1"
                    android:layout_width="344dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/minigame_second_image"
                    app:srcCompat="@drawable/defaultfur" />
            </LinearLayout>
            <!-- col 2 end -->

            <!-- col 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenInteraccion2"
                    android:layout_width="344dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/minigame_third_image"
                    app:srcCompat="@drawable/defaultfur" />
            </LinearLayout>
            <!-- col 3 end -->

            <!-- col 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imagenInteraccion3"
                    android:layout_width="344dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/minigame_fourth_image"
                    app:srcCompat="@drawable/defaultfur" />
            </LinearLayout>
            <!-- col 4 end -->

        </LinearLayout>
        <!-- row 3 end -->

    </LinearLayout>
</ScrollView>

